{
	"name": "path-generator-app",
	"version": "3.0.0",
	"description": "A easy motion profile generator",
	"author": "Matan Steinmetz <matanabc@gamil.com>",
	"main": "public/electron/index.js",
	"repository": "https://github.com/matanabc/path-generator-app.git",
	"homepage": "./",
	"scripts": {
		"start-app": "concurrently \"cross-env BROWSER=none npm run start-web\" \"wait-on http://localhost:3000 && electron .\"",
		"start-web": "react-scripts start",
		"build-app": "npm run build-web && electron-builder",
		"build-web": "react-scripts build",
		"format": "prettier --write ."
	},
	"build": {
		"productName": "PathGenerator",
		"appId": "com.example.PathGenerator",
		"artifactName": "PathGenerator_${os}_${version}.${ext}",
		"extraMetadata": {
			"main": "build/electron/index.js"
		},
		"win": {
			"target": "nsis"
		},
		"linux": {
			"target": "tar.gz"
		},
		"mac": {
			"target": "zip"
		}
	},
	"devDependencies": {
		"@types/mousetrap": "^1.6.8",
		"concurrently": "^6.3.0",
		"electron": "^15.3.0",
		"electron-builder": "^22.13.1",
		"wait-on": "^6.0.0"
	},
	"dependencies": {
		"@testing-library/jest-dom": "^5.15.0",
		"@testing-library/react": "^11.2.7",
		"@testing-library/user-event": "^12.8.3",
		"@types/jest": "^26.0.24",
		"@types/node": "^12.20.37",
		"@types/react": "^17.0.34",
		"@types/react-dom": "^17.0.11",
		"bootstrap": "^5.1.3",
		"cross-env": "^7.0.3",
		"electron-cookies": "^1.1.0",
		"electron-is-dev": "^2.0.0",
		"electron-store": "^8.0.1",
		"electron-updater": "^4.3.9",
		"mousetrap": "^1.6.5",
		"mousetrap-global-bind": "^1.1.0",
		"os": "^0.1.2",
		"path-generator": "^2.2.0",
		"react": "^17.0.2",
		"react-bootstrap": "^2.0.1",
		"react-dom": "^17.0.2",
		"react-draggable": "^4.4.4",
		"react-icons": "^4.3.1",
		"react-rnd": "^10.3.5",
		"react-scripts": "4.0.3",
		"typescript": "^4.4.4",
		"web-vitals": "^1.1.2",
		"zustand": "^3.6.5"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"eslintConfig": {
		"extends": [
			"react-app"
		]
	}
}
